<div class="col-xs-12 col-sm-9">
	<div class="row">
		<div class="col-xs-12">
			<h4>Application List</h4>

			<table class="table table-bordered table-striped">
				<thead>
					<tr>
						<th>Title</th>
						<th id="cpHeader">Current Price</th>
						<th id="spHeader">Suggested Price</th>
					</tr>
				</thead>
				<tbody>
					@foreach (var app in Model)
					{
					<tr class="masterRow">

						<td><button type="button" class="btn btn-dark">@app.Title</button></td>
						<td class="currentPrice">@app.CurrentPrice</td>
						<td class="suggestedPrice">@app.SuggestedPrice</td>
						<td>
							@Html.ActionLink("Edit Current Price", "Edit", "Home", new { id = app.AppId }, new { @class = "btn btn-primary" })
						</td>
					</tr>
					}
				</tbody>
			</table>
		</div>
	</div>
</div>
