@model CarDealership.UI.Models.PurchaseVM
@{
    ViewBag.Title = "Purchase";
}

<h2>Purchase</h2>

	
<div id="details" style="display:block;">

</div>
@using (Html.BeginForm())
{
<div class="form-group" id="purchaseForm">
	<div class="row">
		<div class="col-md-4">

			@Html.HiddenFor(m => m.VehicleId)
			<label>First Name</label>
			@Html.TextBoxFor(m => m.Name, new { @class = "form-control" })
			<label>Email</label>
			@Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
			<label>Street1</label>
			@Html.TextBoxFor(m => m.Street1, new { @class = "form-control" })
			<label>City</label>
			@Html.TextBoxFor(m => m.City, new { @class = "form-control" })
			<label>Zip Code</label>
			@Html.TextBoxFor(m => m.Zipcode, new { @class = "form-control" })
		</div>
		<div class="col-md-8">
			<label>Phone</label>
			@Html.TextBoxFor(m => m.Phone, new { @class = "form-control" })
			<label>Street 2</label>
			@Html.TextBoxFor(m => m.Street2, new { @class = "form-control" })
			<label>State</label>
			@Html.TextBoxFor(m => m.State, new { @class = "form-control" })
		</div>
		<hr />
	</div>
	<div class="row">
		<div class="col-md-4">
			<label>Purchase Price</label>
			@Html.TextBoxFor(m => m.PurchasePrice, new { @class = "form-control" })

		</div>
		<div class="col-md-8">
			<label>Purchase Type</label>
			@Html.DropDownListFor(m => m.PurchaseType.PurchaseTypeId, Model.PurchaseTypes, "-Choose purchase type-", new { @class = "form-control" })
		</div>
</div>
	<br />
<button type="submit" class="btn btn-primary">Save</button>
</div>
}
@section scripts{
	<script src="~/Scripts/SalesResult.js"></script>
	}