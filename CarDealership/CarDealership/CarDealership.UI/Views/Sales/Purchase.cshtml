@model CarDealership.Model.Purchase
@{
    ViewBag.Title = "Purchase";
}

<h2>Purchase</h2>

<div id="results">

</div>

<div class="form-group">
	<div class="row">
		<div class="col-md-3">

			<label>First Name</label>
			@Html.TextBoxFor(m => m.Customer.FirstName, new { @class = "form-control" })
			<label>Last Name</label>
			@Html.TextBoxFor(m => m.Customer.LastName, new { @class = "form-control" })
			<label>Email</label>
			@Html.TextBoxFor(m => m.Customer.Email, new { @class = "form-control" })
			<label>Street1</label>
			@Html.TextBoxFor(m => m.Customer.Street1, new { @class = "form-control" })
			<label>City</label>
			@Html.TextBoxFor(m => m.Customer.City, new { @class = "form-control" })
			<label>Zip Code</label>
			@Html.TextBoxFor(m => m.Customer.ZipCode, new { @class = "form-control" })
		</div>
		<div class="col-md-9">
			<label>Phone</label>
			@Html.TextBoxFor(m => m.Customer.Phone, new { @class = "form-control" })
			<label>Street 2</label>
			@Html.TextBoxFor(m => m.Customer.Street2, new { @class = "form-control" })
			<label>State</label>
			@Html.TextBoxFor(m => m.Customer.State, new { @class = "form-control" })
		</div>
		<hr />
	</div>
	<div class="row">
		<div class="col-md-3">
			<label>Purchase Price</label>
			@Html.TextBoxFor(m => m.PurchasePrice, new { @class = "form-control" })
		</div>
		<div class="col-md-9">
			<label>Purchase Type</label>
			@Html.TextBoxFor(m => m.PurchaseType, new { @class = "form-control" })
		</div>
</div>
	<br />
<button type="submit" class="btn btn-primary">Save</button>
</div>