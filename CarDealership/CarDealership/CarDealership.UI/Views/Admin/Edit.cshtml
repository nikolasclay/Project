@model CarDealership.UI.Models.VehicleVM
@{
    ViewBag.Title = "Edit";
}

<h2>Edit</h2>
@using (Html.BeginForm())
{@Html.HiddenFor(m => m.VehicleId)
	<div class="form-group">
		<div class="row">
			<div class="col-md-4">
				<label>Make</label>
				<br />
				@Html.DropDownListFor(m => m.Vehicle.VehicleModel.VehicleMake.VehicleMakeId, Model.Makes, "-Choose One-", new { @class = "form-control" })
				<label>Type</label>
				<br />
				@Html.DropDownListFor(m => m.PurchaseType.PurchaseTypeId, Model.PurchaseTypes, "-Choose One-", new { @class = "form-control" })
				<label>Year</label>
				<br />
				@Html.TextBoxFor(m => m.Year, new { @class = "form-control" })
				<label>Color</label>
				<br />
				@Html.DropDownListFor(m => m.Vehicle.ExteriorColor.ExteriorColorId, Model.ExteriorColors, "-Choose One-", new { @class = "form-control" })
				<label>Mileage</label>
				<br />
				@Html.TextBoxFor(m => m.Vehicle.Mileage, new { @class = "form-control" })
				<label>MSRP</label>
				<br />
				@Html.TextBoxFor(m => m.Vehicle.MSRP, new { @class = "form-control" })
			</div>
			<div class="col-md-4">
				<label>Model</label>
				<br />
				@Html.DropDownListFor(m => m.Vehicle.VehicleModel.VehicleModelId, Model.Models, "-Choose Model-", new { @class = "form-control" })
				<label>Body Style</label>
				<br />
				@Html.DropDownListFor(m => m.Vehicle.BodyStyle.BodyStyleId, Model.BodyStyles, "-Choose Style-", new { @class = "form-control" })
				<label>Transmission</label>
				<br />
				@Html.TextBoxFor(m => m.Vehicle.Transmission, new { @class = "form-control" })
				<label>Interior Color</label>
				<br />
				@Html.DropDownListFor(m => m.Vehicle.InteriorColor.InteriorColorId, Model.InteriorColors, "-Choose One-", new { @class = "form-control" })
				<label>VIN #</label>
				<br />
				@Html.TextBoxFor(m => m.Vehicle.VIN, new { @class = "form-control" })
				<label>Sale Price</label>
				<br />
				@Html.TextBoxFor(m => m.Vehicle.SalePrice, new { @class = "form-control" })
			</div>
		</div>
		<div class="row">
			<div class="col-md-12">
				<label>Description</label>
				@Html.TextAreaFor(m => m.Vehicle.Description, new { @class = "form-control" })
			</div>
		</div>
		<div class="row">
			<div class="col-4-md">
				<label>Image</label>
				<input id="ImageUpload" name="ImageUpload" type="file" class="form-control" />
			</div>
		</div>
		<button type="submit" class="btn btn-primary">Save</button>
	</div>
}

