@model Exercises.Models.Data.Student
@{
    ViewBag.Title = "Edit";
}

<!DOCTYPE html>

<html>
<head>
	<meta name="viewport" content="width=device-width" />
	<link href="~/Content/bootstrap.min.css" rel="stylesheet" />
	<link href="~/Content/bootstrap-theme.min.css" rel="stylesheet" />
	<title>Edit</title>
</head>
<body>
	<div class="container">
		<div class="row">
			<div class="col-xs-4">
				<h1>Edit Student</h1>
				@Html.ValidationSummary()
				@using (@Html.BeginForm("Edit", "Student", FormMethod.Post))
				{
					@Html.HiddenFor(m => m.Student.StudentId)
					<div class="form-group">
						<label>First Name</label>
						@Html.TextBoxFor(m => m.Student.FirstName, new { @class = "form-control" })
					</div>
					<div class="form-group">
						<label>Last Name</label>
						@Html.TextBoxFor(m => m.Student.LastName, new { @class = "form-control" })
					</div>
					<div class="form-group">
						<label>GPA</label>
						@Html.TextBoxFor(m => m.Student.GPA, new { @class = "form-control" })
					</div>
					<div class="form-group">
						<label>Ma</label>
						@Html.DropDownListFor(m => m.Student.Major, Model.MajorItems, new { @class = "form-control" })
					</div>
					<div class="form-group">
						<label>Ma</label>
						@Html.DropDownListFor(m => m.Student.Courses, Model.CourseItems, new { @class = "form-control" })
					</div>
					@Html.ActionLink("Cancel", "Edit", "Student", null, new { @class = "btn btn-default" })
					<button class="btn btn-primary">Edit</button>
				}
			</div>
		</div>
	</div>
	<script src="~/Scripts/jquery-1.9.1.min.js"></script>
	<script src="~/Scripts/bootstrap.min.js"></script>
</body>
</html>


