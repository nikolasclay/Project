@model Exercises.Models.Data.Course
@{
    ViewBag.Title = "EditCourse";
}

<div class="row">
	<div class="col-xs-12">
		<h3>Edit Major</h3>
		@Html.ActionLink("Return to List", "Majors", "Admin")
	</div>
</div>
<div class="row">
	<div class="col-xs-12">
		@using (Html.BeginForm())
		{
			@Html.HiddenFor(m => m.CourseId)
			<div class="form-group">
				<label>Major</label>
				@Html.TextBoxFor(m => m.CourseName, new { @class = "form-control", placeholder = "Major" })
			</div>
			<button type="submit" class="btn btn-sm btn-primary">Save</button>
		}
	</div>
</div>  